@import 'mixins/effects'
/* Toolbars */

.toolbar
    position: fixed
    margin: 0px auto
    width: 100%
    text-align: center
    bottom: 0
    pattern('escheresque')
    overflow: hidden
    height: 100px
    display: none
    letterpress()
    // DEBUG
    //unselectable()

.toolbar:hover
    display: block

.toolbar-top
    @extends .toolbar
    top: 0
    /* Overflow toolbar */
    //box-shadow 0px 0px 10px rgba(0,0,0,.8)
    /* Inset toolbar */
    box-shadow inset 0px -10px 10px -10px rgba(0,0,0,.8)

    /* Furigana fix */
    /* TODO: may use completely different element for usages! */
    line-height: 40px
    /* TODO: fix display in Chrome browser: line-height should be 100px */
    font-size: 36px
    font-family: 'IPAMincho','TakaoExMincho'

    /* TODO: prepare separate file for colors and sizes */
    p
        margin-top: 30px
        font-size: 20px

    ruby
        margin-top: 15px
        margin-left: 20px

    ruby:hover
        color: #1D95D1
        cursor: pointer

        em
            color: #007CB9

    em
        color: #404040
        font-style: normal

    .notice
        font-family: 'Volcorn', Georgia, serif


.toolbar-bottom
    @extends .toolbar
    bottom: 0
    box-shadow inset 0px 10px 10px -10px rgba(0,0,0,.8)
    line-height: 100px

    .rads
        font-size: 40px
        font-family: 'IPAMincho','TakaoExMincho'
        // TODO: use chinese font?
        //font-family: '宋体', 'PMingLiU'

        .rad:hover
            color: #1D95D1
            cursor: pointer

// TODO: center contents vertically
.toolbar-side
    //background: black
    //opacity: 0.7
    //border: 4px double #fff
    //border-radius: 6px
    position: fixed
    overflow: hidden
    //box-shadow 0px 0px 10px rgba(0,0,0,.8)

    box-shadow inset 0px 0px 10px 0px rgba(0,0,0,.8)
    pattern('escheresque')
    letterpress()

    //color: white

    margin: 0px auto
    top: 20%
    width: 30%
    height: 59%

    text-align: center

    display: none

    font-family: 'IPAMincho','TakaoExMincho'

    em
        color: #363636
        font-style: normal

.toolbar-right
    @extends .toolbar-side

    right: -10px

    dl
        vertical-align: middle
        top:50%
        padding-top: 10px
        padding-right: 20px

    dt
        font-size: 23px
        font-weight: normal
        margin: 10px 2px 10px 10px
        line-height: 25px

    dd
        color: #919191
        font-size: 16px
        margin-bottom: 10px
        margin-left: 20px
        font-family: 'Volcorn', Georgia, serif

.toolbar-left
    @extends .toolbar-side
    left: -10px

