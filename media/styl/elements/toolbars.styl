@import 'mixins/effects'
/* Toolbars */

.toolbar
    position: fixed
    margin: 0px auto
    width: 100%
    text-align: center
    bottom: 0
    pattern('escheresque')
    overflow: hidden
    height: 100px
    display: none
    letterpress()
    // DEBUG
    //unselectable()

.toolbar:hover
    display: block

.toolbar-top
    @extends .toolbar
    top: 0
    /* Overflow toolbar */
    //box-shadow 0px 0px 10px rgba(0,0,0,.8)
    /* Inset toolbar */
    box-shadow inset 0px -10px 10px -10px rgba(0,0,0,.8)

    /* Furigana fix */
    /* TODO: may use completely different element for usages! */
    line-height: 40px
    /* TODO: fix display in Chrome browser: line-height should be 100px */
    font-size: 36px
    font-family: 'IPAMincho','TakaoExMincho'

    /* TODO: prepare separate file for colors and sizes */
    p
        margin-top: 30px
        font-size: 20px

    ruby
        margin-top: 15px
        margin-left: 20px

    ruby:hover
        color: #1D95D1
        cursor: pointer

        em
            color: #007CB9

    em
        color: #404040
        font-style: normal

    .notice
        font-family: 'Volcorn', Georgia, serif


.toolbar-bottom
    @extends .toolbar
    bottom: 0
    box-shadow inset 0px 10px 10px -10px rgba(0,0,0,.8)
    line-height: 100px

    .rads
        font-size: 40px
        font-family: "FangSong", "仿宋", STFangSong, "华文仿宋", serif
        //font-family: 'IPAMincho','TakaoExMincho'
        //font-family: '宋体', 'PMingLiU'
        //font-family: Hei, SimSun, '宋体', '黑体', '微软雅黑', sans-serif

        .rad:hover
            color: #1D95D1
            cursor: pointer

// TODO: center contents vertically
.toolbar-side
    //background: black
    //opacity: 0.7
    //border: 4px double #fff
    //border-radius: 6px
    position: fixed
    overflow: hidden
    //box-shadow 0px 0px 10px rgba(0,0,0,.8)

    box-shadow inset 0px 0px 10px 0px rgba(0,0,0,.8)
    pattern('escheresque')
    letterpress()

    //color: white

    margin: 0px auto
    top: 20%
    width: 30%
    height: 59%

    text-align: center
    vertical-align: middle

    display: none

    font-family: 'IPAMincho','TakaoExMincho'

    em
        color: #363636
        font-style: normal

    dl
        vertical-align: middle
        padding-bottom: 20px

    dt
        font-size: 23px
        font-weight: normal
        margin: 10px 2px 10px 10px
        line-height: 25px

    dd
        color: #919191
        font-size: 16px
        margin-bottom: 10px
        margin-left: 20px
        font-family: 'Volcorn', Georgia, serif

.content-left, .content-right
    display: table-cell
    vertical-align: middle
    text-align: center
    max-height: 59%

.toolbar-right
    @extends .toolbar-side
    right: -10px

    dl
        padding-right: 20px

    dt
        font-size: 23px

.toolbar-left
    @extends .toolbar-side
    left: -10px

    dl
        vertical-align: middle
        padding-left: 20px

    dt
        font-size: 30px
        line-height: 30px
        padding-top: 8px
        color: #5E5E5E

    .meaning
        font-size: 16px
        font-family: 'Volcorn', Georgia, serif
        color: #7D7D7D

    hr
        margin: 4px
        border: 0;
        height: 1px;
        background-image: linear-gradient(left, rgba(102,102,102,0), rgba(102,102,102,0.75), rgba(102,102,102,0))


.lookup-button
    font-family: 'Volcorn', Georgia, serif
    font-size:20px

    background-color:transparent
    box-shadow inset 0px 0px 3px 0px rgba(0,0,0,.8)
    border-radius:6px
    border:1px solid #dcdcdc
    display:inline-block
    padding:6px 24px
    line-height: 40px
    margin-top: 25px
    text-decoration:none
    letterpress()

.lookup-button:hover
    // todo: fix?
    //background: linear-gradient( center top, #e9e9e9 5%, #f9f9f9 100% )
    background-color:#e9e9e9
    transition: all 0.2s ease-in-out

.lookup-button:active
    background-color:#BFBFBF
    transition: all 0.1s ease-in-out

.tool-button
    @extends .lookup-button
    padding: 2px 6px

.tool-button:hover
    @extends .lookup-button:hover
    color: #292929

.tool-button:active
    @extends .lookup-button:active

.buttons-left
    position: absolute
    left: 20px

.info
    font-family: 'IPAMincho','TakaoExMincho'
    font-size: 70px
    color: #C2C2C2

    position: absolute
    line-height: 100px

    unselectable()
    cursor: default

.info-right
    @extends .info
    top: 0px
    right: 10px

.info, .info-right:hover
    color: #7DC8ED

.info-left
    @extends .info
    left: 20px
    transform: rotate(-30deg)

.related-kanji
    font-size: 40px
    padding: 0px 60px 0px 60px

.single-kanji
    padding: 10px

.single-kanji:hover
    color: #1D95D1
    cursor: pointer

