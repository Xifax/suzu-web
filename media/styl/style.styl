@import 'nib'

/* Mixins */

// Nice looking shadow box
box-shadow(args...)
    -webkit-box-shadow args
    -moz-box-shadow args
    box-shadow args

// Shadows for top or bottom of the page
body-shadow(pos)
    content ""
    position fixed
    if pos is 'top'
        top -10px
    else
        bottom -10px
    left 0
    width 100%
    height 10px
    z-index 100
    box-shadow 0px 0px 10px rgba(0,0,0,.8)

// Center text in div
center(w, h)
    position: absolute
    top: 50%
    left: 50%
    text-align: center
    width: w
    height: h
    line-height: h
    margin-left: -(@width / 2)
    margin-top: -(@height / 2)


/* Classes */

body
    background-color:#269
    //background-image: linear-gradient(white 2px, transparent 2px),
        //linear-gradient(90deg, white 2px, transparent 2px),
        //linear-gradient(rgba(255,255,255,.3) 1px, transparent 1px),
        //linear-gradient(90deg, rgba(255,255,255,.3) 1px, transparent 1px)
    background-size:100px 100px, 100px 100px, 20px 20px, 20px 20px
    background-position:-2px -2px, -2px -2px, -1px -1px, -1px -1px

// Top and bottom of the page
body:before
    body-shadow 'top'

body:after
    body-shadow 'bottom'

.main
    font-size: 20px


// Centerpiece of page (kanji and info)
.center-wrapper
    center(500px, 500px)

// Kanji in center
.circle
    font-size: 220px
    font-family: 'IPAMincho', 'TakaoExMincho'
    border-radius: 50%
    width: 500px
    height: 500px
    border: 2px solid
    color: black
    background: white
    box-shadow 0px 0px 10px rgba(0,0,0,.8)
    //text-shadow: 1px 1px 1px #888888

.circle:hover
    color: white
    background: black
    opacity: 0.9
