@import 'nib'

/* Mixins */

// Nice looking shadow box
box-shadow(args...)
    -webkit-box-shadow args
    -moz-box-shadow args
    box-shadow args

// Shadows for top or bottom of the page
body-shadow(pos)
    content ""
    position fixed
    if pos is 'top'
        top -10px
    else
        bottom -10px
    left 0
    width 100%
    height 10px
    z-index 100
    box-shadow 0px 0px 10px rgba(0,0,0,.8)

// Center text in div
center(w, h)
    position: absolute
    top: 50%
    left: 50%
    text-align: center
    width: w
    height: h
    line-height: h
    margin-left: -(@width / 2)
    margin-top: -(@height / 2)

// Burning text effect
burn()
    color: #fff
    text-shadow: 0px -1px 4px white,
        0px -2px 10px yellow,
        0px -10px 20px #ff8000,
        0px -18px 40px red

// Cloudy text
cloud()
    text-shadow: 0px 0px 10px rgba(255,255,255,0.6),
        0px 0px 30px rgba(255,255,255,0.4),
        0px 0px 50px rgba(255,255,255,0.3),
        0px 0px 180px rgba(255,255,255,0.3)
    color: rgba(255,255,255,0)

// Neon text effect
neon()
    color: #fff
    text-shadow: 0 0 5px #fff,
        0 0 10px #fff,
        0 0 15px #fff,
        0 0 20px #ff2d95,
        0 0 30px #ff2d95,
        0 0 40px #ff2d95,
        0 0 50px #ff2d95,
        0 0 75px #ff2d95

// 3D text
perspective()
    color: #fff
    text-shadow: 0px 1px 0px #999,
        0px 2px 0px #888,
        0px 3px 0px #777,
        0px 4px 0px #666,
        0px 5px 0px #555,
        0px 6px 0px #444,
        0px 7px 0px #333,
        0px 8px 7px #001135

// Letterpress text effect
letterpress()
    text-shadow: 0 1px 0 #fff
    color: #666


unselectable()
    -moz-user-select: -moz-none
    -khtml-user-select: none
    -webkit-user-select: none



/* Classes */

body
    background-image: url('../img/pattern/washi.png')

// Top and bottom of the page
body:before
    body-shadow 'top'

body:after
    body-shadow 'bottom'

.main
    font-size: 20px


// Centerpiece of page (kanji and info)
.center-wrapper
    center(500px, 500px)

// Kanji in center
.circle
    font-size: 300px
    font-family: 'IPAMincho', 'TakaoExMincho'
    border-radius: 50%
    width: 500px
    height: 500px
    border: 4px double #ccc;

    box-shadow 0px 0px 10px rgba(0,0,0,.8)
    //background-image: url('../img/pattern/scribble_light.png')
    background-image: url('../img/pattern/subtle.png')
    letterpress()

    //background: #ddd

.circle:hover
    cursor: default
    unselectable()
    background: black
    opacity: 0.7
    border: 4px double #fff
    burn()
    transition: all 0.4s ease-out
