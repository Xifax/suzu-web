box-shadow(args...)
   -webkit-box-shadow args
   -moz-box-shadow args
   box-shadow args

body:before
   content ""
   position fixed
   top -10px
   left 0
   width 100%
   height 10px
   z-index 100
   box-shadow 0px 0px 10px rgba(0,0,0,.8)

body:after
   content ""
   position fixed
   bottom -10px
   left 0
   width 100%
   height 10px
   z-index 100
   box-shadow 0px 0px 10px rgba(0,0,0,.8)

